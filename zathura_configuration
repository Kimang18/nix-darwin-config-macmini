set synctex true
set synctex-editor-command "nvim --servername VIMD +%{line} %{input}"

set selection-clipboard clipboard
set statusbar-h-padding 0
set statusbar-v-padding 0
set window-width 720
set window-height 900
set page-padding 1
set incremental-search true
set window-title-home-tilde true

map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map F toggle_fullscreen
map B toggle_statusbar
map [fullscreen] u scroll half-up
map [fullscreen] d scroll half-down
map [fullscreen] D toggle_page_mode
map [fullscreen] F toggle_fullscreen
map r reload
map [fullscreen] r reload
map R rotate
map [fullscreen] R rotate
map K zoom in
map [fullscreen] K zoom in
map J zoom out
map [fullscreen] J zoom out
map i recolor
map [fullscreen] i recolor
map p print

set recolor true
# gruvbox dark theme
set recolor-darkcolor "#FFD7AF"
set recolor-lightcolor "#32302F"
# gruvbox light theme
#set recolor-darkcolor "#1f1f1f"
#set recolor-lightcolor "#F8E6BE"
